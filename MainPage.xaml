<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1ATM.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image Source="atmm.png" HeightRequest="185" Aspect="AspectFit" 
                   SemanticProperties.Description="atmm" />

            <Label Text="Atm View" Style="{StaticResource Headline}" 
                   SemanticProperties.HeadingLevel="Level1" />

            <Label Text="Welcome to Atm View platform" Style="{StaticResource SubHeadline}" 
                   SemanticProperties.HeadingLevel="Level2"
                   SemanticProperties.Description="Welcome to dot net Multi platform App" />

            <!-- Le bouton avec un nom pour lier dans le code-behind -->
            <Button x:Name="CounterBtn" Text="Click me" 
                    SemanticProperties.Hint="Counts the number of times you click"
                    Clicked="OnCounterClicked" HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
